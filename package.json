{
  "name": "web-gui",
  "version": "1.0.0",
  "description": "Interfaz web para interprete-pl",
  "main": "./web/app.html",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",

    "build:cms" : "cp --update ./node_modules/codemirror/lib/codemirror.css ./codemirror.css",
    "build:octi": "cp --update ./node_modules/octicons/octicons/octicons.{css,svg,woff,ttf,eof} ./octicons",
    "build:css" : "cp --update ./web/app.css ./app.css",
    "build:js"  : "webpack ./web/app.js ./bundle.js",
    "build:html": "cp --update ./web/app.html ./index.html",
    "build"     : "npm run build:css && npm run build:cms && npm run build:octi && npm run build:html && npm run build:js",
    "postbuild" : "echo \"version $npm_package_version\" > README.md",

    "preupdate-ghpages" : "npm run build",
    "update-ghpages"    :"git checkout gh-pages && git add --all && git commit -m \"version $npm_package_version\" && git push origin gh-pages",
    "postupdate-ghpages" : "git checkout master"
  },
  "author": "Rodrigo Maximiliano Bellusci",
  "license": "MIT",
  "devDependencies": {
    "codemirror": "^5.13.2",
    "jquery": "^2.2.2",
    "webpack": "^1.12.14"
  },
  "dependencies": {
    "octicons": "^3.5.0"
  }
}
