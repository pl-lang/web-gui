{
  "name": "web-gui",
  "version": "1.0.0",
  "description": "Interfaz web para interprete-pl",
  "main": "./web/app.html",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",

    "build:cms" : "cp ./node_modules/codemirror/lib/codemirror.css ./build/codemirror.css",
    "build:octi": "cp ./node_modules/octicons/octicons/octicons.{css,svg,woff,ttf,eot} ./build",
    "build:css" : "cp ./web/app.css ./build/app.css",
    "build:html": "cp ./web/app.html ./build/index.html",
    "build:js"  : "webpack ./web/app.js ./build/bundle.js",
    "build"     : "mkdir build && npm run build:cms && npm run build:octi && npm run build:css && npm run build:html && npm run build:js",

    "mv:cms"    : "mv --update ./build/codemirror.css ./codemirror.css",
    "mv:octi"   : "mv --update ./build/octicons.{css,svg,woff,ttf,eot} ./",
    "mv:css"    : "mv --update ./build/app.css ./app.css",
    "mv:html"   : "mv --update ./build/index.html ./index.html",
    "mv:js"     : "mv --update ./build/bundle.js ./bundle.js",
    "mv"        : "npm run mv:cms && npm run mv:octi && npm run mv:css && npm run mv:html && npm run mv:js && rmdir build",


    "preupdate-ghpages"   : "npm run build",
    "update-ghpages"      :"git checkout gh-pages && npm run mv && echo \"version %npm_package_version%\" > README.md && git add --all && git commit -m \"version %npm_package_version%\" && git push origin gh-pages",
    "postupdate-ghpages"  : "git checkout master && mkdir octicons"
  },
  "author": "Rodrigo Maximiliano Bellusci",
  "license": "MIT",
  "devDependencies": {
    "codemirror": "^5.13.2",
    "jquery": "^2.2.2",
    "webpack": "^1.12.14"
  },
  "dependencies": {
    "octicons": "^3.5.0"
  }
}
